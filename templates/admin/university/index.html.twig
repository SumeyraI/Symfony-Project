{% extends 'adminbase.html.twig' %}

{% block title %}University index{% endblock %}

{% block body %}

    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowURL,windowName,windowFeatures){  window.open(windowURL,windowName,windowFeatures) ; }
    </SCRIPT>





<div class="container-scroller">
    <!-- partial:../../partials/_navbar.html -->
    {% block header %}{% include ('admin/header.html.twig') %}{% endblock %}
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        {% block sidebar %}{% include ('admin/sidebar.html.twig') %}{% endblock %}
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">

                <a href="{{ path('admin_university_new') }}"class="btn btn-success btn-fw">Create new</a>

    <table class="table  ">
        <thead>
            <tr>
                <th>Id</th>

                <th>Category</th>


                <th>Title</th>

                <th>Description</th>
                <th>Image</th>



                <th>Image Gallery</th>
                <th>Status</th>
                <th>User</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for university in universities %}
            <tr>
                <td>{{ university.id }}</td>
                <td>{{ university.catname }}</td>

                <td>{{ university.title }}</td>

                <td>{{ university.description }}</td>
                <td><img src="{{ asset('uploads/images/' ~university.image) }}" height="40"> </td>




                <td>
                    <a href="javascript:openWin('{{ path('admin_image_new',{'id':university.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                        <img src="{{asset('assets')  }}/admin/img/gallery1.png" height="40">
                    </a>
                </td>


                <td>{{ university.status }}</td>

                <td><a href="{{ path('admin_user_show', {'id': university.userid}) }}">
                        {{ university.name}} {{ university.surname }}
                </td>
            </a>

                <td>

                    <a href="{{ path('admin_university_show', {'id': university.id}) }}"class="btn btn-primary btn-sm " >Show</a>
                </td>
                <td>
                    <a href="{{ path('admin_university_edit', {'id': university.id}) }}"class="btn btn-primary btn-sm  ">Edit</a>

                </td>
                <td>
                {{ include('admin/university/_delete_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




            </div>
            <!-- content-wrapper ends -->
            <!-- partial:../../partials/_footer.html -->
            {% block footer %}{% include ('admin/footer.html.twig') %}{% endblock %}
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
{% endblock %}
