{% extends 'adminbase.html.twig' %}

{% block title %}Category Home Page{% endblock %}

{% block body %}
<div class="container-scroller">
    <!-- partial:../../partials/_navbar.html -->
    {% block header %}{% include ('admin/header.html.twig') %}{% endblock %}
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        {% block sidebar %}{% include ('admin/sidebar.html.twig') %}{% endblock %}
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">

                <a href="{{ path('admin_category_new') }}"class="btn btn-success btn-fw">Create new</a>


                <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Parentid</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Description</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.parentid }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.keywords }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.status }}</td>
                <td>
                    <a href="{{ path('admin_category_show', {'id': category.id}) }}"class="btn btn-success btn-fw">show</a>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}"class="btn btn-info btn-fw">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




            </div>
            <!-- content-wrapper ends -->
            <!-- partial:../../partials/_footer.html -->
            {% block footer %}{% include ('admin/footer.html.twig') %}{% endblock %}
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>


{% endblock %}
