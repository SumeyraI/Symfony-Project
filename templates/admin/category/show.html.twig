{% extends 'adminbase.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}

    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        {% block header %}{% include ('admin/header.html.twig') %}{% endblock %}
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            {% block sidebar %}{% include ('admin/sidebar.html.twig') %}{% endblock %}
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
    <h2>Show Category</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Parentid</th>
                <td>{{ category.parentid }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ category.keywords }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ category.image }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ category.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_category_index') }}"class="btn btn-danger btn-fw">back to list</a>

    <a href="{{ path('admin_category_edit', {'id': category.id}) }}"class="btn btn-info btn-fw">edit</a>

    {{ include('admin/category/_delete_form.html.twig') }}
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    {% block footer %}{% include ('admin/footer.html.twig') %}{% endblock %}
    <!-- partial -->
    </div>
    <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
    </div>

{% endblock %}
