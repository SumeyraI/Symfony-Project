{% extends 'adminbase.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        {% block header %}{% include ('admin/header.html.twig') %}{% endblock %}
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            {% block sidebar %}{% include ('admin/sidebar.html.twig') %}{% endblock %}
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <h2>Comment List</h2>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Subject</th>
                            <th>Comment</th>
                            <th>Status</th>
                            <th>Ip</th>
                            <th>User</th>
                            <th>Haber,Etkinlik,Duyuru</th>
                            <th>Rate</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for comment in comments %}
                            <tr>
                                <td>{{ comment.id }}</td>
                                <td>{{ comment.subject }}</td>
                                <td>{{ comment.comment }}</td>
                                <td>{{ comment.status }}</td>
                                <td>{{ comment.ip }}</td>

                                <td>{{ comment.name }} {{ comment.surname }}</td>
                                <td>{{ comment.title }}</td>
                                <td>{{ comment.rate }}</td>
                                <td>
                                    <a class="btn btn-success " href="{{ path('admin_comment_show', {'id': comment.id}) }}">Show</a>
                                    <a class="btn btn-info" href="{{ path('admin_comment_edit', {'id': comment.id}) }}">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
                <!-- content-wrapper ends -->
                <!-- partial:../../partials/_footer.html -->
                {% block footer %}{% include ('admin/footer.html.twig') %}{% endblock %}
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

{% endblock %}
