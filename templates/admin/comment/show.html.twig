{% extends 'adminbase.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        {% block header %}{% include ('admin/header.html.twig') %}{% endblock %}
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            {% block sidebar %}{% include ('admin/sidebar.html.twig') %}{% endblock %}
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <h2>Show Comment</h2>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ comment.id }}</td>
                        </tr>
                        <tr>
                            <th>Subject</th>
                            <td>{{ comment.subject }}</td>
                        </tr>
                        <tr>
                            <th>Comment</th>
                            <td>{{ comment.comment }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ comment.status }}</td>
                        </tr>
                        <tr>
                            <th>Ip</th>
                            <td>{{ comment.ip }}</td>
                        </tr>
                        <tr>
                            <th>Userid</th>
                            <td>{{ comment.userid }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Rate</th>
                            <td>{{ comment.rate }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('admin_comment_index') }}"class="btn btn-danger btn-fw">back to list</a>

                    <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}"class="btn btn-info btn-fw">edit</a>

                    {{ include('admin/comment/_delete_form.html.twig') }}
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:../../partials/_footer.html -->
                {% block footer %}{% include ('admin/footer.html.twig') %}{% endblock %}
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

{% endblock %}
