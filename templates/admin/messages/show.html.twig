{% extends 'adminbase.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        {% block header %}{% include ('admin/header.html.twig') %}{% endblock %}
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            {% block sidebar %}{% include ('admin/sidebar.html.twig') %}{% endblock %}
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">

                    <h2>Show Messages</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ message.name }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ message.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ message.status }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ message.ip }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ message.note }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ message.updatedAt ? message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_messages_index') }}"class="btn btn-danger btn-fw">back to list</a>

    <a href="{{ path('admin_messages_edit', {'id': message.id}) }}"class="btn btn-info btn-fw">edit</a>

    {{ include('admin/messages/_delete_form.html.twig') }}

    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    {% block footer %}{% include ('admin/footer.html.twig') %}{% endblock %}
    <!-- partial -->
    </div>
    <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
    </div>

{% endblock %}
