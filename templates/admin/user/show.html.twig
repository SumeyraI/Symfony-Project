{% extends 'adminbase.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}


    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        {% block header %}{% include ('admin/header.html.twig') %}{% endblock %}
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            {% block sidebar %}{% include ('admin/sidebar.html.twig') %}{% endblock %}
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">

                    <h1>Show User</h1>


                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>{{ user.password }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ user.name }}</td>
                        </tr>
                        <tr>
                            <th>Surname</th>
                            <td>{{ user.surname }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td><img src="{{ asset('uploads/images/' ~user .image) }}" height="100"> </td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ user.status }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('admin_user_index') }}"class="btn btn-danger btn-fw">back to list</a>

                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}"class="btn btn-info btn-fw">edit</a>

                    {{ include('admin/user/_delete_form.html.twig') }}

                </div>
                <!-- content-wrapper ends -->
                <!-- partial:../../partials/_footer.html -->
                {% block footer %}{% include ('admin/footer.html.twig') %}{% endblock %}
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
{% endblock %}