{% extends 'adminbase.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

<SCRIPT language="JavaScript" type="text/javascript">
    function openWin(windowURL,windowName,windowFeatures){  window.open(windowURL,windowName,windowFeatures) ; }
</SCRIPT>



<div class="container-scroller">
    <!-- partial:../../partials/_navbar.html -->
    {% block header %}{% include ('admin/header.html.twig') %}{% endblock %}
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        {% block sidebar %}{% include ('admin/sidebar.html.twig') %}{% endblock %}
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">

                <a href="{{ path('admin_user_new') }}"class="btn btn-success btn-fw">Create User</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>

                <th>Name</th>
                <th>Surname</th>
                <th>Image</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>

                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td><img src="{{ asset('uploads/images/' ~user .image) }}" height="60"> </td>
                <td>{{ user.status }}</td>

                <td>

                    <a href="{{ path('admin_user_show', {'id': user.id}) }}"class="btn btn-success btn-fw">Show</a>
                </td>
                <td>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}"class="btn btn-info btn-fw">Edit</a>
                </td>
                <td>
                    {{ include('admin/user/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            </div>
            <!-- content-wrapper ends -->
            <!-- partial:../../partials/_footer.html -->
            {% block footer %}{% include ('admin/footer.html.twig') %}{% endblock %}
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
{% endblock %}